{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve"
  },
  "include": ["src/**/*", "types/global.d.ts", "types/global.d.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}

